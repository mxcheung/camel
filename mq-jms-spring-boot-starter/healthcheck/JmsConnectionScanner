import javax.jms.Connection;
import javax.jms.ConnectionFactory;

import org.springframework.context.ApplicationContext;
import org.springframework.scheduling.annotation.Scheduled;
import org.springframework.stereotype.Component;
import org.springframework.beans.factory.annotation.Autowired;

import java.util.Map;

@Component
public class JmsConnectionScanner {

    @Autowired
    private ApplicationContext context;

    @Scheduled(fixedRate = 60000) // every 60 seconds
    public void logAllConnectionFactories() {
        Map<String, ConnectionFactory> factories = context.getBeansOfType(ConnectionFactory.class);

        if (factories.isEmpty()) {
            System.out.println("No JMS ConnectionFactory beans found in context.");
            return;
        }

        for (Map.Entry<String, ConnectionFactory> entry : factories.entrySet()) {
            String beanName = entry.getKey();
            ConnectionFactory factory = entry.getValue();
            System.out.println("Found JMS ConnectionFactory bean: " + beanName + " -> " + factory);

            // Test connection
            try (Connection connection = factory.createConnection()) {
                System.out.println("  Connection successful for bean: " + beanName);
            } catch (Exception e) {
                System.err.println("  Failed to connect for bean: " + beanName);
                e.printStackTrace();
            }
        }
    }
}
